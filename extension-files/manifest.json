{
    "manifest_version": 2,
    "name": "Clickup Customizer",
    "version": "1.2",
    "description": "This extension is for internal use only. It's totes useless for anyone else. (┛ಠ_ಠ)┛彡┻━┻",
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Clickup Customizer",
        "default_icon": {
            "16": "images/lilikoi-icon16.png"
        }
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.example.com; object-src 'self'",
    "content_scripts": [{
        "matches": [
            "*://*.clickup.com/*",
            "*://clickup.com/*"
        ],
        "match_about_blank": false,
        "all_frames": true,
        "run_at": "document_end",
        "js": ["js/load-content.js"]
    }],
    "icons": {
        "16": "images/lilikoi-icon16.png",
        "48": "images/lilikoi-icon48.png"
    },
    "permissions": [
        "cookies",
        "<all_urls>",
        "activeTab"
    ]
}
